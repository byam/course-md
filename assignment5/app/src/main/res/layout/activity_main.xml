<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- First question with RadioButtons -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quiz App"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="@color/purple_700"
        android:paddingTop="30dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Q1. What is the default visibility modifier in Kotlin?"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:textColor="@color/purple_500"
        />
    <RadioGroup
        android:id="@+id/q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_marginLeft="10dp"
        >
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="public"
            android:id="@+id/q1a1"
            android:textSize="20sp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="private"
            android:id="@+id/q1a2"
            android:textSize="20sp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="protected"
            android:id="@+id/q1a3"
            android:textSize="20sp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="internal"
            android:id="@+id/q1a4"
            android:textSize="20sp"/>
    </RadioGroup>

    <!-- Second question with CheckBoxes -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Q2. Which of the following are valid collection types in Kotlin?"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textColor="@color/purple_500"
        />
    <LinearLayout
        android:id="@+id/q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="List"
        android:id="@+id/q2a1"
        android:textSize="20sp"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Set"
        android:id="@+id/q2a2"
        android:textSize="20sp"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Map"
        android:id="@+id/q2a3"
        android:textSize="20sp"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="RefList"
        android:id="@+id/q2a4"
        android:textSize="20sp"/>
    </LinearLayout>

    <!-- Buttons -->
    <Button
        android:id="@+id/submit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Submit"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        />
    <Button
        android:id="@+id/reset"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Reset"
        />

</LinearLayout>
